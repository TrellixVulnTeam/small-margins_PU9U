<% layout('/layouts/boilerplate') %>
<% block('head').append('<link rel="stylesheet" type="text/css" href="/css/new.css">') %>
<main class="admin-control">
    <h1>Create Item</h1>
    <form class="form" action="/"" method="POST">
        <label for="product-brand">Product Brand</label>
        <input type="text" id="product-brand" name="product[brand]" required>
        <label for="product-model">Product Model</label>
        <input type="text" id="product-model" name="product[name]" required>
        <label for="product-description">Product Description</label>
        <textarea type="text" name="product[description]" id="product-description" cols="30" rows="10" required></textarea>
        <label for="product-price">Product Price</label>
        <input type="number" id="product-price" name="product[price]" required>
        <button class="btn-form">Update</button>
    </form>
</main>