<% layout('/layouts/boilerplate') %>
<% block('head').append('<link rel="stylesheet" type="text/css" href="/css/main.css">') %>
<main class="admin-form">
    <div class="container">
        <h1>Create Item</h1>
        <form class="form" action="/"" method="POST">
            <label for="product-brand">Brand</label>
            <input type="text" id="product-brand" name="product[brand]" placeholder="Brand name e.g. Asics" required>
            <label for="product-model">Model</label>
            <input type="text" id="product-model" name="product[name]" placeholder="Model name e.g. GT-2000" required>
            <label for="product-description">Description</label>
            <textarea type="text" name="product[description]" id="product-description" cols="30" rows="10" placeholder="Product description such as key features" required></textarea>
            <label for="product-color">Colour</label>
            <input type="text" id="product-color" name="product[color]" placeholder="The colour of the model you are adding" required>
            <label for="product-price">Price</label>
            <input type="number" id="product-price" name="product[price]" required>
            <label for="product-img">Image</label>
            <input type="text" id="product-img" name="product[img]" placeholder="Please enter an image address" required>
            <div class="product-sizes">
                <h6>Sizes</h6>
                <div>
                    <input type="checkbox" id="sizes-checkbox" value="7" name="product[size]">
                    <label for="sizes-checkbox">7</label>
                </div>
                <div>
                    <input type="checkbox" id="sizes-checkbox" value="8" name="product[size]">
                    <label for="sizes-checkbox">8</label>
                </div>
                <div>
                    <input type="checkbox" id="sizes-checkbox" value="9" name="product[size]">
                    <label for="sizes-checkbox">9</label>
                </div>
                <div>
                    <input type="checkbox" id="sizes-checkbox" value="10" name="product[size]">
                    <label for="sizes-checkbox">10</label>
                </div>
                <div>
                    <input type="checkbox" id="sizes-checkbox" value="11" name="product[size]">
                    <label for="sizes-checkbox">11</label>
                </div>
            </div>
            <label for="product-category">Category</label>
            <input type="text" id="product-category" name="product[category]" placeholder="The category of the product, e.g. Shoes" required>
            <label for="product-link">Link</label>
            <input type="text" id="product-link" name="product[link]" placeholder="A link to an external marketplace in which to buy the product" required>
            <button class="btn-form">Update</button>
        </form>
    </div>
</main>
<section></section>
