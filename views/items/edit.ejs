<% layout('/layouts/boilerplate') %>
<% block('head').append('<link rel="stylesheet" type="text/css" href="/css/main.css">') %>
<main class="admin-form">
    <div class="container">
        <h1>Edit Item</h1>
        <form class="form" action="/products/<%= product._id %>?_method=PUT" method="POST">
            <label for="product-brand">Product Brand</label>
            <input type="text" id="product-brand" name="product[brand]" value="<%= product.brand %>" required>
            <label for="product-model">Product Model</label>
            <input type="text" id="product-model" name="product[name]" value="<%= product.name %>" required>
            <label for="product-description">Product Description</label>
            <textarea type="text" name="product[description]" id="product-description" cols="30" rows="10" required><%= product.description %></textarea>
            <label for="product-color">Colour</label>
            <input type="text" id="product-color" name="product[color]" value="<%= product.color %> " required>
            <label for="product-price">Product Price</label>
            <input type="number" id="product-price" name="product[price]" value="<%= product.price %>" required>
            <label for="product-image">Product Image</label>
            <input type="text" id="product-price" name="product[img]" value="<%= product.img %>" required>
            <label for="product-category">Category</label>
            <input type="text" id="product-category" name="product[category]" value="<%= product.category %> " required>
            <label for="product-link">Link</label>
            <input type="text" id="product-link" name="product[link]" value="<%= product.link %> " required>
            <button class="btn-form">Update</button>
        </form>
    </div>
</main>