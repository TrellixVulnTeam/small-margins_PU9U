<% if(success && success.length) { %> 
<!-- <div class="flash-success flash-message" role="alert"> -->
    <div class="flash-modal" role="alert">
        <p><%= success %></p>
        <button class="close-flash">Close</button>
    </div>
    <div class="overlay"></div>
<% } %> 

<% if(error && error.length) { %>
<!-- <div class="flash-error flash-message" role="alert"> -->
    <div class="flash-modal" role="alert">
        <p><%= error %></p>
        <button class="close-flash">Close</button>
    </div>    
    <div class="overlay"></div>
<% } %> 
<% block('footer').append('<script src="/js/flash.js"></script>')%>

