    <% layout('./layouts/boilerplate') %>
    <% block('head').append('<link rel="stylesheet" type="text/css" href="css/style.css">') %>
    <header class="cookie-message">
        <p>We use cookies to personalise your experience. By continuing to visit this website you agree to our use of cookies.</p>
        <button class="cookie-btn">Accept</button>
    </header>
    <main class="hero">
        <div class="container">
            <h1>Elevate Your Game.</h1>
            <p>All the latest running gear, techniques and more</p>
        </div>
    </main>
    <section class="products">
        <div class="section-header">
            <h2>Bestselling-Items</h2>
            <div class="detail"></div>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Aspernatur minima natus accusantium labore. Exercitationem, et?</p>
        </div>
        <div class="product__grid container">
        <% for (let product of products) { %>
            <div class="product__item">
                <a class="img-wrapper" href="/products/<%= product._id %> ">
                    <img src="<%= product.img %>" alt="">
                </a>
                <h4><%= product.brand %> <%= product.name %></h4>
                <p class="product__description"><%= product.description %> </p>
                <div class="product__footer">
                    <p>Â£ <%= product.price %> </p>
                    <a class="btn-wrapper" href="/products/<%= product._id %> ">
                        <button class="btn-purchase">
                            <span>More Info</span>
                            <img src="/img/arrow-right.svg" alt="arrow-right-icon">
                        </button>
                    </a>
                </div>
            </div>
        <% } %>  
        </div>
    </section>
    <section class="banner">
        <div class="container">
            <div class="banner-left">
                <h3>Have Your Say.</h3>
                <p>Become a member & add to our community.</p>
            </div>
            <div class="banner-right">
                <a href="/register">
                    <button class="btn-banner">
                        <span>Sign Up Now</span>
                        <img src="/img/arrow-right.svg" alt="arrow-right-icon">
                    </button>
                </a>
            </div>
        </div>
    </section>
    <% block('footer').append('<script src="/js/home.js"></script>')%>
